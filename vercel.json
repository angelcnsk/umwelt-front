{
    "routes": [
      { "src": "/api/saludo", "dest": "/functions/api/saludo.js" },
      { "src": "/api/.*", "dest": "/functions/api/index.js" },
      { "handle": "filesystem" },
      { "src": "/.*", "dest": "/index.html" }
    ],
    "functions": {
        "functions/api/saludo.js": {
            "memory": 128,
            "maxDuration": 10
        }
    }
}